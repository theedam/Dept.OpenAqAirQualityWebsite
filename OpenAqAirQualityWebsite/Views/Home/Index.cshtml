@model HomePageViewModel;

<div class="text-center">
    <h1>Please select a City</h1>
    <form>
        <div class="row">
            <div class="col-4">
                <select name="sort" class="form-select">
                    <!option @(Model.Sort == @OpenAqConstants.SortAsc ? "selected" : "")>@OpenAqConstants.SortAsc</!option>
                    <!option @(Model.Sort == @OpenAqConstants.SortDesc ? "selected" : "")>@OpenAqConstants.SortDesc</!option>
                </select>
            </div>
            <div class="col-4">
                <select name="orderBy" class="form-select">
                    <!option @(Model.OrderBy == @OpenAqConstants.OrderByCity ? "selected" : "")>@OpenAqConstants.OrderByCity</!option>
                    <!option @(Model.OrderBy == @OpenAqConstants.OrderByCountry ? "selected" : "")>@OpenAqConstants.OrderByCountry</!option>
                    <!option @(Model.OrderBy == @OpenAqConstants.OrderByFirstUpdated ? "selected" : "")>@OpenAqConstants.OrderByFirstUpdated</!option>
                    <!option @(Model.OrderBy == @OpenAqConstants.OrderByLastUpdated ? "selected" : "")>@OpenAqConstants.OrderByLastUpdated</!option>
                </select>
            </div>
            <div class="col-4">
                <select name="pageSize" class="form-select">
                    <!option @(Model.PageSize == 10 ? "selected" : "")>10</!option>
                    <!option @(Model.PageSize == 25 ? "selected" : "")>25</!option>
                    <!option @(Model.PageSize == 100 ? "selected" : "")>100</!option>
                    <!option @(Model.PageSize == 250 ? "selected" : "")>250</!option>
                    <!option @(Model.PageSize == 1000 ? "selected" : "")>1000</!option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary">
                    Search
                </button>
            </div>
            <div class="col-6">
                <a href="/" class="btn btn-secondary">
                    Clear
                </a>
            </div>
        </div>
        @if (Model.Cities?.CityItems != null && Model.Cities.CityItems.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">City</th>
                        <th scope="col">Country</th>
                        <th scope="col">Number of Locations</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var city in Model.Cities.CityItems)
                    {
                        <tr>
                            <td><a href="/city?id=@city.City">@city.City</a></td>
                            <td>@city.Country</td>
                            <td>@city.Locations</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Cities Found</p>
        }
    </form>
</div>
